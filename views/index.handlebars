<nav class="navbar navbar-default navbar-fixed-top">
<ul class="nav">
  <li class="nav-item">
    <a class="nav-link" href="saved">Saved Articles</a>
  </li>
  <li class="nav-item">
    <button id="scrape" type="button" class="btn btn-primary">Scrape New Articles!</button>
  </li>
  <li class="nav-item">
    <button id="clear" type="button" class="btn btn-primary">Clear Articles!</button>
  </li>
</ul>
</nav>

<div class="container">
  <div class="jumbotron jumbotron-fluid">
    <div class="container">
      <h1 class="display-4">Mongo Scraper</h1>
      <p class="lead">HuffPost Edition</p>
    </div>
  </div>

    {{#each article}}
        <div class="card">  
          <h5 class="card-header">{{this.title}}</h5>
          <div class="card-body">
            <a href="{{this.link}}">
              <p class="card-text">Read Article</p>
            </a>
           <button id="save" type="button" class="btn btn-success save" data-id={{this._id}}>Save Article</button>
          </div>
        </div>
    {{/each}}   
</div>  