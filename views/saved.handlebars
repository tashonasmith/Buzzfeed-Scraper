<div class="container">
  <div class="jumbotron jumbotron-fluid">
    <div class="container">
      <h1 class="display-4">Saved Articles</h1>
      <p class="lead">Your Saved Articles</p>
    </div>
  </div>

   {{#each article}}
        <div class="card">  
          <h5 class="card-header">{{this.title}}</h5>
          <div class="card-body">
            <a href="{{this.link}}" target="_blank">  
              <p class="card-text">Read Article</p>
            </a>
           <button id="add-comment" type="button" class="btn btn-success addComment" data-toggle="modal" data-target="#commentModal" data-id={{this._id}}>Add a comment</button>
           {{!-- <button id="view-comments" type="button" class="btn btn-success viewComment" data-toggle="modal" data-target="#viewCommentModal" data-id={{this._id}}>View Comments</button> --}}
           <button id="delete-article" type="button" class="btn btn-success delete save" data-id={{this._id}}>Delete Article</button>
          </div>
        </div>
    {{/each}}   
</div>  

{{#each article}}
<div class="modal fade" id="modelWindow" role="dialog">
            <div class="modal-dialog modal-sm vertical-align-center">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
                  <h4 class="modal-title">Add a comment</h4>
                </div>
                <div class="modal-body">
                    <form>
                       <label for="comment-text"></label> 
                       <input data-id={{this._id}} name="comment-text" id="comment-text" type="text" placeholder="Type a comment"> 
                       <button data-id={{this._id}} id="save-comment" type="button" class="btn btn-primary">Save</button>                      
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" data-dismiss="modal" class="btn btn-default">Close</button>
                </div>
              </div>
            </div>
        </div>

